            android:text="@string/matrices"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:id="@+id/matrices"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numbers"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:id="@+id/numbers"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_theory"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:id="@+id/number_theory"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plotting"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:id="@+id/plotting"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trigonometry"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:id="@+id/trigonometry"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true" />



    </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/pac_image"
        android:src="@drawable/pacman"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:id="@+id/camera"
        android:src="@drawable/camera"
        android:onClick="picture"
        android:layout_below="@+id/help_me_text"
        android:layout_alignRight="@+id/help_me_text"
        android:layout_alignEnd="@+id/help_me_text" />


