    <EditText
        android:id="@+id/searchView"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_search_category_default"
        android:textColor="@android:color/white"
        android:layout_below="@+id/logos"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/searchView"
        android:layout_centerInParent="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/searchView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:textSize="25dp"
    android:layout_height="wrap_content"
    android:textColor="@android:color/white"
    android:clickable="true"
    android:text="@string/algebra"
    android:id="@+id/algebra"
    android:layout_gravity="center"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textColor="@android:color/white"
    android:text="@string/applied_math"
    android:id="@+id/applied_math"
    android:clickable="true"
    android:layout_gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textColor="@android:color/white"
    android:text="@string/calculus"
    android:clickable="true"
    android:id="@+id/calculus"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/definition"
    android:textSize="25dp"
    android:textColor="@android:color/white"
    android:clickable="true"
    android:id="@+id/definition"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/discrete_math"
